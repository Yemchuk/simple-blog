<h1><%= @article.title  %></h1>
<p>
  <%= @article.text %>
</p>
<hr>
<h2>Write a Comment</h2>
<p>
	<%= form_for ([@article, @article.comments.build]) do |f| %>
		<p>
			<%= f.label :author %><br>
			<%= f.text_field :author %>
		</p>
		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<%end%>
</p>

<h2>Comments</h2>
<% @article.comments.each do |comment|%>
	<hr>
	<h2><%= comment.author %></h2>
  <p><%= comment.body %></p>
<% end %>
