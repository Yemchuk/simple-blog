<div class="row">
  <div class="col-sx-12">
    <h1>Edit Article</h1>

    <%= form_for :article, url: article_path(@article), method: :put do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
        <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <%end%>
  </div>
</div>
